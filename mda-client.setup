(compile -s -O2 -d1 mda-client.scm -j mda-client)
(compile -s mda-client.import.scm -O2 -d0)
(compile -c -O2 -d1 mda-client.scm -unit mda-client -j mda-client)

(install-extension
  'mda-client
  ; Files to install for your extension:
  '("mda-client.o" "mda-client.so" "mda-client.import.so")
  ; Assoc list with properties for your extension:
  '((version 1)
    (static "mda-client.o"))) ;; for static linking
